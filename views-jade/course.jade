extends layout

block content
	h1=course.code

	each exam in course.Exams
		h2
			a(href='/exam/' + exam.id) #{exam.code}

		ul
		each problem in exam.Problems
			li
				p Question:
				img(src='/'+problem.Question.filename, style="width:100px;")
				
				if problem.Answer
					if problem.Answer.filename
						p Answer:
						img(src='/'+problem.Answer.filename, style="width:100px;")
				
				br
				//- ul
				//- 	each exam in course.Exams
				//- 		li
				//- 			a(href="/course/" +course.id + "/" + exam.id + "/") #{exam.code}
			


