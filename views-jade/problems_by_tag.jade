extends layout

block content
	h1 Problems with '#{tag.title}'
	a(href='/tag/#{tag.slug}/solution') Problems with solutions

	each course in courses
		h2 #{course.code} #{course.id}


		if (course.Exams)
			each exam in course.Exams
				each problem, index in exam.Problems
					a(href='/problem/#{course.id}/#{exam.id}/#{problem.id}') #{problem.id}
					|  